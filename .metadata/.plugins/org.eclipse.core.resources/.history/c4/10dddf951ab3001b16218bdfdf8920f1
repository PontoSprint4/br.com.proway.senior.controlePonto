package br.com.teste;

import java.time.Duration;
import java.time.Instant;
import java.time.temporal.ChronoUnit;

public class Main {

	public static void main(String[] args) {
		Instant instante = Instant.now();
		System.out.print("Instante: ");
		System.out.println(instante);
		
		Instant instante2 = Instant.MAX;
		System.out.print("Instant2e: ");
		System.out.println(instante2);
		
		Instant instante3 = Instant.MIN;
		System.out.print("Instante3: ");
		System.out.println(instante3);
		
		Instant iInitial = Instant.now();
		System.out.print("iInitial: ");
		System.out.println(iInitial);
		
		try {
			Thread.sleep(1000);
		} catch (Exception e) {
			e.printStackTrace();
		}
		Instant iFinal = Instant.now();
		
		
		
		Duration duration = Duration.between(iInitial, iFinal);
		System.out.print("duration: ");
		System.out.println(duration.toMinutes());
				
		long gap;
		gap = ChronoUnit.HOURS.between(iInitial, iFinal);
		System.out.println(gap);
		
		
	}

}
